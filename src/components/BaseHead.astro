---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
    title="Emanate Software | Refactoring the Future"
    description="Emanate Software is revolutionizing how businesses grow through innovative technology solutions tailored to your needs."
    canonical="https://emanate.software"
    openGraph={{
      url: "https://emanate.software",
      title: "Emanate Software | Refactoring the Future",
      description: "Emanate Software is revolutionizing how businesses grow through innovative technology solutions tailored to your needs.",
      images: [
        {
          url: "https://emanate.software/emanate.png",
          width: 1200,
          height: 630,
          alt: "Emanate Software Open Graph Image",
          type: "image/jpeg",
        },
      ],
      site_name: "Emanate Software",
      type: "website",
      locale: "en_US",
    }}
  />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Basic Meta Tags -->
  <meta name="description" content="Emanate Software is reshaping the future with innovative business solutions. Discover how we can help you grow." />
  <meta name="keywords" content="business solutions, software development, innovation, technology, SaaS" />
  <meta name="author" content="Emanate Software" />

  <!-- Favicons -->
  <link rel="icon" href="/favicon.ico" sizes="any" />
  <link rel="icon" href="/icon.svg" type="image/svg+xml" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/manifest.webmanifest" />
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://emanate.software" />
  <meta property="og:title" content="Emanate Software | Refactoring the Future" />
  <meta property="og:description" content="Emanate Software is reshaping the future with innovative business solutions. Discover how we can help you grow." />
  <meta property="og:image" content="https://emanate.software/emanate.png" />

  <!-- Canonical URL -->
  <link rel="canonical" href="https://emanate.software" />

  <!-- SEO for Search Engine Crawlers -->
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow" />

  <!-- Theme Color for Mobile Browsers -->
  <meta name="theme-color" content="#ffffff" />

  <!-- Preconnect to third-party domains -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

  <!-- Optimize Font Loading -->
  <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet" />
  <link rel="preconnect" href="https://rsms.me/" />
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

  <!-- JavaScript (Alpine.js) -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
